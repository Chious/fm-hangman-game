---
import Navbar from "@/components/Navbar.astro";
import Layout from "@/layouts/Layout.astro";
import CategoryPicker from "@/components/CategoryPicker";

const OPTIONS = [
  "Movies",
  "TV Shows",
  "Countries",
  "Capital Cities",
  "Animals",
  "Sports",
];
---

<Layout>
  <main class="container flex min-h-screen w-screen flex-col">
    <Navbar title="Pick a Category" />
    <CategoryPicker options={OPTIONS} client:only="react" />
  </main>
</Layout>
