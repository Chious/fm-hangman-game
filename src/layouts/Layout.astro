---
import "@/styles/global.css";
import { Image, getImage } from "astro:assets";
import backgroundDesktop from "@/assets/images/background-desktop.svg";
import backgroundTablet from "@/assets/images/background-tablet.svg";
import backgroundMobile from "@/assets/images/background-mobile.svg";
import ClientRouter from "astro/components/ClientRouter.astro";

interface Props {
  title?: string;
}

const { title = "Hangman Game - Classic Word Puzzle" } = Astro.props;

const desktopImg = await getImage({ src: backgroundDesktop });
const tabletImg = await getImage({ src: backgroundTablet });
const mobileImg = await getImage({ src: backgroundMobile });
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Play the classic Hangman word guessing game online. Choose from multiple categories and test your vocabulary skills!"
    />
    <meta
      name="keywords"
      content="hangman, word game, puzzle game, vocabulary game, online game"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload fonts -->
    <link
      rel="preload"
      href="/fonts/MouseMemoirs-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title} | Hangman Game | Frontend Mentor</title>
  </head>
  <body class="relative min-h-screen w-full overflow-x-hidden">
    <slot />
    <picture class="fixed inset-0 -z-10 h-full w-full">
      <source media="(min-width: 1024px)" srcset={desktopImg.src} />
      <source media="(min-width: 768px)" srcset={tabletImg.src} />

      <Image
        src={backgroundMobile}
        alt="background"
        class="h-full min-h-screen w-full object-cover"
        loading="eager"
      />
    </picture>
    <ClientRouter />
  </body>
</html>

<script>
  import {
    initBackgroundMusic,
    playBackgroundMusic,
    initSoundEffects,
  } from "@/atoms/soundAtoms";

  let musicStarted = false;

  // Initialize sound effects on every page load (including View Transitions navigation)
  document.addEventListener("astro:page-load", () => {
    // Defer initialization to not block critical resources
    setTimeout(() => {
      initBackgroundMusic();
      initSoundEffects();

      // Wait for user interaction to start music (required by browsers)
      const startMusic = () => {
        if (!musicStarted) {
          playBackgroundMusic();
          musicStarted = true;
        }
      };

      // Start music on first user interaction
      document.addEventListener("click", startMusic, { once: true });
      document.addEventListener("keydown", startMusic, { once: true });
      document.addEventListener("touchstart", startMusic, { once: true });
    }, 100);
  });
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>
